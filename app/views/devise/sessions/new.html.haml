.main-content
  = render 'registrations/registration-header'
  .main-content__login
    .main-content__login-all
      .main-content__login-all-no_account
        %p アカウントをお持ちでない方はこちら
        = link_to '新規会員登録', new_user_registration_path,class: 'link-signin'
      .main-content__login-all-login
        %button.facebook-login
          %i.fab.fa-facebook.fa-pull-left
          = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path,class: 'facebook-login-link'
        %button.google-login
          %i.fab.fa-google.fa-pull-left
          = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path,class: 'google-login-link'
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-login
          .form-login-email
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",class:"login-email"
          .form-login-password
            = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード",class:"login-password"
          .form-login-no-robot
            recaptcha_tags
          = f.submit "ログイン" , :class => 'login-submit'
          =link_to 'パスワードをお忘れの方','https://www.mercari.com/jp/password/reset/start/',class: 'forget-password'

  = render 'registrations/registration-footer'
