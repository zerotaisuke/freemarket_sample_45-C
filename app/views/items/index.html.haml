.default-container
  = render 'header'
.top_banner
= image_tag "top_image/1.jpg", id: 'main_image', class: 'top_banner__main_image'

.pickup_container
  %h3.pickup_container__message
    ピックアップアイテム
  .new_pickup__category
    %p.new_pickup__category__ladies_new__message
      レディース新着アイテム
      .new_pickup__category__new
        - @items.each do |item|
          .new_pickup__category__new__contents_box
            = image_tag "#{item.image}", :size => "213x213"
            .item_box_body
              .item_box_body__name
                = item.name
              .item_box_body__num
                .item_box_body__num__price
                  = item.price
                .item_box_body__num__tax (税込)
